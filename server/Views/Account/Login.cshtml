@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager
  
@{
  ViewData["Title"] = "Log in";
}

@section Styles{
  <style>
    .mdl-layout {
	  align-items: center;
      justify-content: center;
    }
    .mdl-layout__content {
	  padding: 24px;
	  flex: none;
    }
    .signin-button {
      width: 100%;
    }
    .mdl-textfield__error {
      visibility: visible;
    }
    .links {
      font-size: 12px;
      text-align: center;
    }
  </style>
}

<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
  <main class="mdl-layout__content">
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">Sign into your account</h2>
      </div>
      <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <div class="mdl-card__supporting-text">
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" type="text" asp-for="Email" />
            <label class="mdl-textfield__label" asp-for="Email">Username</label>
            <span class="mdl-textfield__error" asp-validation-for="Email"></span>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" type="password" asp-for="Password" />
            <label class="mdl-textfield__label" asp-for="Password">Password</label>
            <span class="mdl-textfield__error" asp-validation-for="Password"></span>
          </div>

          <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" asp-for="RememberLogin">
            <input type="checkbox" class="mdl-checkbox__input" asp-for="RememberLogin" />
            <span class="mdl-checkbox__label">
              @Html.DisplayNameFor(m => m.RememberLogin)
            </span>
          </label>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
              <button class="signin-button mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Sign in</button>
            </div>
            <div class="links mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet">
              <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
            <div class="links mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet">
              <a asp-action="Register" asp-route-returnurl="@Model.ReturnUrl">Create an account</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </main>
</div>